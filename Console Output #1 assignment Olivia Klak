using System;
using System.Threading;
using System.Threading.Tasks;

namespace CPSC
{
    class Program
    {
        static void Main(string[] args)
        {
            //Console WriteLine() allows you create sentences for the users
            // \n gives a new line and \t creates a tab 
            Console.WriteLine("Hello sir! You want BLt sandwich? I shall tell you my secrets.");
            //Thread sleep allows a delay in between the lines () where you can choose a specific time - in ms.
            System.Threading.Thread.Sleep(2000); 
            Console.WriteLine("First you're going to want to get out your ingredients and your needed cutlery");
            System.Threading.Thread.Sleep(2000);
            Console.WriteLine("\n\tIngredients: \n1.Bacon \n2.Lettuce \n3.Tomatos \n4.1 Bagel \n5.Mayo");
            System.Threading.Thread.Sleep(2020);
            Console.WriteLine("\n\tCutlery: \n1.Cutting board \n2.Stove and Pan \n4.Knife \n5.Plate");
            System.Threading.Thread.Sleep(2040);
            Console.WriteLine("\nStep 1: \tYou are going to want to put the Bacon on the stove at medium high heat");
            System.Threading.Thread.Sleep(2095);
            Console.WriteLine("Step 2: \tYou then want to take 3 pieces of lettuce and wash them under the sink and put it off to the side");
            System.Threading.Thread.Sleep(2095);
            Console.WriteLine("Step 3: \tStart washing the a tomato under the sink and then place it down on the cutting board. You are then going to proceed by slicing the tomato in thin pieces");
            System.Threading.Thread.Sleep(2095);
            Console.WriteLine("Step 4: \tPlace the bagel in a pan, turn the stove on just below medium heat and wait until the bottom turns golden brown and then flip it over");
            System.Threading.Thread.Sleep(2095);
            Console.WriteLine("Step 5: \tPlace your cheese slices on top of one half of the bagel and wait for it to melt, and then turn down the heat");
            System.Threading.Thread.Sleep(2095);
            Console.WriteLine("Step 6: \tFlip over the bacon in the other pan and wait until it has fully cooked");
            System.Threading.Thread.Sleep(2095);
            Console.WriteLine("Step 7: \tTake both halves of the bagel out and place it on a plate. Take your mayo and knife and spread it on the one half of the bagel that does not have melted cheese on it");
            System.Threading.Thread.Sleep(2095);
            Console.WriteLine("Step 8: \tTake your bacon and the washed pieces of lettuce and place it on top of the bagel with melted cheese, and to finish it off place the half with mayo on top ");
            System.Threading.Thread.Sleep(2095);
            Console.WriteLine("Step 9: \tTake a good look at it and admire the beauty");
            System.Threading.Thread.Sleep(2095);
            Console.WriteLine("Step 10: \tEat it");



        }
    }
}
